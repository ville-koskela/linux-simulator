{
  "name": "linux-simulator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @linux-simulator/frontend",
    "build": "npm run build -w @linux-simulator/frontend",
    "preview": "npm run preview -w @linux-simulator/frontend",
    "test": "npm run test -w @linux-simulator/frontend",
    "test:watch": "npm run test:watch -w @linux-simulator/frontend",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "npm run type-check -w @linux-simulator/frontend",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@testing-library/react": "16.3.0",
    "@types/jsdom": "27.0.0",
    "@types/node": "24.9.2",
    "@types/react": "19.1.16",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.4",
    "husky": "9.1.7",
    "jsdom": "27.1.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.1.7"
  }
}
