{
  "name": "linux-simulator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev -w @linux-simulator/frontend",
    "dev:backend": "npm run dev -w @linux-simulator/backend",
    "dev:all": "npm run dev:backend & npm run dev:frontend",
    "build": "npm run build --workspaces --if-present",
    "preview": "npm run preview -w @linux-simulator/frontend",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch -w @linux-simulator/frontend",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "npm run type-check --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/node": "24.10.1",
    "husky": "9.1.7",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
